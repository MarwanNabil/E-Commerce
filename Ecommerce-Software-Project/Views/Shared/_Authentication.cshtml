@using Ecommerce_Software_Project.Controllers
<ul class="navbar-nav flex-grow-1">
    @if (Ecommerce_Software_Project.Services.Authentication.IsLoggedIn)
    {
        <li class="d-flex">
            <img class="rounded-circle" style="object-fit:cover" width="50px" height="50px" src="~@Ecommerce_Software_Project.Services.Authentication.LoggedInUser.UserImageUrl" asp-append-version=true/>
            <a class="nav-link text-dark fw-bold" asp-area="" asp-controller="User" asp-action="Profile">@Ecommerce_Software_Project.Services.Authentication.LoggedInUser.Name</a>
        </li>
    }
    else
    {
        <li class="nav-item me-2">
            <a class="btn btn-outline-info" asp-area="" asp-controller="Auth" asp-action="Index">Login</a>
        </li>
        <li class="nav-item">
            <a class="btn btn-info" asp-area="" asp-controller="Auth" asp-action="Register">Register</a>
        </li>
    }
</ul>