@model IEnumerable<Ecommerce_Software_Project.Models.User>

@{
    ViewData["Title"] = "Admin - Purchase Money";

}

<br />
<h1>Purchase Money</h1>
<br />

@using (Html.BeginForm("PurchaseMoneyRequest", "Admin"))
{

    <div class="form-group">
        <label for="exampleFormControlSelect1">Example select</label>
        <select id="inputState" class="form-control" name="UserId" required>
                @foreach (User x in Model)
                {
                    <option value="@x.Id">@(x.Id + " - " + x.Name)</option>
                }
        </select>
    </div>

    <div class="form-group">
        <label for="exampleInputEmail1">Money : </label>
        <input type="number" class="form-control" name="Money" placeholder="Money To Be Added.." required>
    </div>

    <button type="submit" class="btn btn-primary" style="margin: 8px"> Purchase </button>
}