@model IEnumerable<Category>

<h1>View Category</h1>
<hr />

<div>
    @foreach (var item in Model)
    {
        <div class="Categores">
            <div style="font-size: 20px ">
                @Html.DisplayFor(modelitem => item.CategoryName)
                <a href="~/Product/DisplayProductsViaCategory/@item.Id">
                    <div class="btn btn-warning">
                        View
                    </div>
                </a>
            </div>
        </div>
    }
</div>

<style>

    .Categores {
        overflow: hidden;
        margin: 5px;
        width: 92%;
        height: auto;
        background-color: black;
        color: white;
        border-radius: 10%;
        margin: 30px auto;
        justify-content: center;
        padding: 20px;
    }

    .item box {
        list-style: none;
        height: 350px;
        float: left;
        margin: 15px;
        color: white;
        font-size: 25px;
        transition: 1s;
    }

    .item:hover {
        transform: scale(1,1);
        background-color: lightblue;
    }

    .btn {
        float: right;
    }
</style>